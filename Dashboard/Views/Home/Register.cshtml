@{
    ViewData["Title"] = "Register";
    @model RegisterViewModel
}

<link rel="stylesheet" href="~/css/register.css" />

<h1>Account Registration</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="col-md-2">
        <input type="submit" value="Register" class="registerbtn" />
    </div>
    <p>By creating an account you agree to our <a asp-area="" asp-controller="home" asp-action="privacy">Terms & Privacy</a>.</p>
    <button type="submit" class="registerbtn">Register</button>

    <div class="container signin">
        <p>Already have an account? <a asp-controller="home" asp-action="login">Sign in</a>.</p>
    </div>
</form>



    <article class="esh-orders-items row">
        <section class="esh-orders-item col-xs-2">@Model.Username</section>
        <section class="esh-orders-item col-xs-4">@Model.Password</section>
    </article>



